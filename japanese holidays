#include <iostream>
using namespace std;

int main()
{
    setlocale(0, "");
    cout << "~Японские праздники в месяцах года~\n\n";
    cout << "[1] Январь \n";
    cout << "[2] Февраль\n";
    cout << "[3] Март\n";
    cout << "[4] Апрель\n";
    cout << "[5] Май\n";
    cout << "[6] Июнь\n";
    cout << "[7] Июль\n";
    cout << "[8] Август\n";
    cout << "[9] Сентябрь\n";
    cout << "[10] Октябрь\n";
    cout << "[11] Ноябрь\n";
    cout << "[12] Декабрь\n\n";
    cout << "~Введите желаемый номер месяц года~:";

    int num;
    cin >> num;

    switch (num)
    {
    case 1:
        cout << "~Январь: первая половина января - Сёгацу (Новый год)~";
        break;
    case 2:
        cout << "~Февраль:  Мамэмаки - традиция благополучия в семье~";
        break;
    case 3:
        cout << "~Март:  Белый день  - день, когда мужчина покупает возлюбленной угощение~";
        break;
    case 4:
        cout << "~Апрель: Камбуцуэ - фестиваль цветов~";
        break;
    case 5:
        cout << "~Май: Кодомо-но хи - день детей~";
        break;
    case 6:
        cout << "~Июнь: Танабата - романтическое празднество возлюбленных~";
        break;
    case 7:
        cout << "~Июль: Уми но хи - день моря~";
        break;
    case 8:
        cout << "~Август: Обон - фестиваль поминовения усопших~";
        break;
    case 9:
        cout << "~Сентрябрь: Кэйро но хи - день почитания старших~";
        break;
    case 10:
        cout << "~Октябрь: Тайику-но хи  -  день физкультуры~";
        break;
    case 11:
        cout << "~Ноябрь: Бунка но хи  -  день культуры~";
        break;
    case 12:
        cout << "~Декабрь: Курисумасу  -  рождество~";
        break;
    default:
        cout << "~Данного месяца не существует~";
        break;
    }
    int _; cin >> _;
    return 0;
}
