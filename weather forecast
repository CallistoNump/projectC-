#include <iostream>
using namespace std;

int main()
{
    setlocale(0, "");

    cout << "[-] Прогноз погоды\n\n";

    cout << "[1]Весна\n";
    cout << "[2]Зима\n";
    cout << "[3]Осень\n";
    cout << "[4]Лето\n\n";
    cout << "[-]Введите значение: ";

    short season;
    cin >> season;

    if (season == 1)
    {
        cout << "Весна,  выйдите на улице, чтобы послушать как поют птицы и посмотреть на красивый закат.";
    }
    else if (season == 2)
    {
        cout << "Зима, тепло оденьтесь, соберите друзей и идите играть в снежки.";
    }
    else if (season == 3)
    {
        cout << "Осень,не забудьте взять с собой зонт для прохладных прогулок.";
    }
    else if (season == 4)
    {
        cout << "Лето, позовите друзей и устройте пикник или сходите искупаться на речку.";
    }
    else 
    {
        cout << "Такого времени года нет";
    }
    int _; cin >> _;
    return 0;
}
