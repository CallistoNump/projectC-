#include <iostream>
#include <Windows.h>

#define reset "\x1b[0m"

using namespace std;
int lifetime; //жизни
int True_answer; // правильный ответ
int False_answer; // неправильный ответ
char decision; // ответ пользователя
bool check; // проверка на совпадение вопросов
char answer;// буква вопроса

void pause() { system("pause"); }// собственно, пауза

void configuration(); // настроечка
void clear() { system("cls"); } // очистка

void questions()
{
	clear();
	cout << " [0] Как называется еврейский Новый год? (Рош ха-Шана)\n";
	cout << " [1] Кто из этих персонажей не дружит с Гарри Поттером? (Драко Малфой) \n";
	cout << " [2] Какое животное не фигурирует в китайском зодиаке? (Колибри)\n";
	cout << " [3] В какой стране проходили летние Олимпийские игры 2016 года? (Бразилия)\n";
	cout << " [4] Какая планета самая горячая?(Венера)\n";
	cout << " [5] Как назывался корабль капитана Джека Воробья в Пиратах Карибского моря (Черная жемчужина)?\n";
	cout << " [6] Какая самая редкая группа крови? (I группа) \n";
	cout << " [7] Сколько костей в теле человека? (206)\n";
	cout << " [8] Fe — это символ какого химического элемента? (Железо)\n";
	cout << " [9]  На каком языке говорит больше всего людей на Земле? (китайский)\n";
	cout << " [10] Какая самая короткая трагедия Шекспира? (Макбет)\n";
	cout << " [11] Сколько сердец у осьминога? (3)\n";
	cout << " [12] Какая социальная сеть появилась в 2003 году? (Myspace)\n";
	cout << " [13] Какая планета в нашей Солнечной системе самая большая? (Юпитер)\n";
	cout << " [14] Кто расписывал потолок Сикстинской капеллы? (Микеланджело)\n";
	cout << " [15] Какой океан самый большой на Земле? (Тихий)\n";
	cout << " [16] Кто нарисовал Мону Лизу? (да Винчи)\n";
	cout << " [17] Какая страна потребляет больше всего шоколада? (Швейцария)\n";
	cout << " [18] Как мы ещё называем хлорид натрия? (Соль)\n";
	cout << " [19] Какая река самая длинная в мире? (Нил)\n";
	cout << " [20] Сколько дней в феврале в високосный год? (29)\n";
	cout << " [21] Сколько градусов в круге? (360)\n";
	cout << " [22] Какой город известен, как Город Любви? (Париж)\n";
	cout << " [23] Сколько зубов должно быть во рту взрослого человека? (32)\n";
	cout << " [24] Какой цвет является комплементарным зеленому?(красный)\n";
	cout << " [25] Сколько существует книг о Гарри Поттере? (7)\n";
	cout << " [26] Великобритания состоит из следующих стран: Англия, Ирландия, Уэльс и… (Шотландия)\n";
	cout << " [27] Сколько элементов в таблице Менделеева? (118)\n";
	cout << " [28] Какая змея самая смертоносная? (Черная Мамба)\n";
	cout << " [29] Как называется семейная стая львов? (Прайд)\n";
	cout << " [30] Сколько клавиш у стандартного современного пианино / фортепиано? (88)\n";
	cout << " [31] Как звали женщину из греческой мифологии, у которой вместо волос были змеи? (Медуза)\n";
	cout << " [32] За какой приблизительный период Луна совершает полный оборот вокруг Земли? ( 27 дней)\n";
	cout << " [33] Кто в греческой мифологии является царицей царства мёртвых? (Персефона)\n";
	cout << " [34] При какой температуре по Фаренгейту замерзает вода? ( 32 градуса)\n";
	cout << " [35] Кто основал Microsoft? (Билл Гейтс)\n";
	cout << " [36] Какие две планеты в нашей Солнечной системе известны, как ледяные гиганты? (Нептун и Уран)\n";
	cout << " [37] В какой стране находится Прага? (Чешская Республика)\n";
	cout << " [38] Сколько ребер в теле человека? (24)\n";
	cout << " [39] Какое животное ассоциируется с Древним Египтом? (Кот)\n";
	cout << " [40] Сколько часовых поясов в мире? (24)\n";
	cout << " [41] Сколько колец на олимпийском флаге? (5)\n";
	cout << " [42] Сколько глаз у паука? (8)\n";
	cout << " [43] Как мы ещё называем бикарбонат натрия? (соль)\n";
	cout << " [44] Что сжигаютв романе Рэя Брэдбери 451 градус по Фаренгейту? (книги)\n";
	cout << " [45] Как называется компания, выпустившая видеоигру Mario Kart? (Nintendo)\n";
	cout << " [46] Какова длина олимпийского бассейна (в метрах)? ( 50)\n";
	cout << " [47] К какой стране принадлежат города Перт, Аделаида и Брисбен? (Австралия)\n";
	cout << " [48] Какой формы знак STOP? (Восьмиугольник)\n";
	cout << " [49] Что такое кинофобия? (Боязнь собак)\n";
	cout << " [50] Кто дал название Тихому океану? (Фернан Магеллан)\n\n";
	


}

void menyushka() {
	cout << "                                                    \x1b[95m~Доброго времени суток!~\n\n ";
	cout << "                                  \x1b[90mВы решили сыграть в викторину? Чудесно, выберите действие\n\n";
	cout << "                                                         \x1b[96m[1] Начать игру!\n";
	cout << "                                                         \x1b[96m[2] Хотите посмотреть вопросы с ответами?";
	cout << "                                                         \x1b[96mНастоятельно советую смотреть их только после пройденных тестов!!\n";
	cout << "                                                         \x1b[96m[3] Выход\n\n";
	cout << "                                                       \x1b[93mЧто хотите выбрать?";

	short customization; //выбор действия
	cin >> customization;

	switch (customization) {

	case 1:
	{
		clear();
		configuration();

	}
	break;
	case 2: {
		questions();

	}
		  break;
	case 3: {
		exit(0); //здесь должен быть выход
	}
		  break;
	default:
		cout << "       Наверное, вы ошиблись, данное действие невозможно!\n\n    ";
		clear();
		pause();
		menyushka();

	}

}

void configuration()
{
	clear();
	cout << "                                                          \x1b[95m~Настройка игры~\n\n ";
	cout << "                                                     \x1b[96m[1] Выбрать уровень сложности\n";
	cout << "                                                      \x1b[96m[2] Выход обратно в меню\n";
	cout << "                                                         \x1b[93m~Что хотите выбрать?~";

	short Setting_game; // настройка игры 
	cin >> Setting_game;

	switch (Setting_game)
	{

	case 1:
	{
		clear();
		cout << "                                           \x1b[95m~Выберите уровень сложности, который хотели бы пройти!!~\n\n";
		cout << "                                         \x1b[96m[1] Уровень 1: Содержит 10 вопросов, у вас имеется 7 жизней\n";
		cout << "                                         \x1b[96m[2] Уровень 2: Содержит 15 вопросов, у вас имеется 5 жизней\n";
		cout << "                                         \x1b[96m[3] Уровень 3: Содержит 20 вопросов, у вас имеется 3 жизни\n\n";
		cout << "                                         \x1b[96m[4] Выйти в меню\n\n";
		cout << "                                               \x1b[93mЧто хотите выбрать?";
		short  choice; // выбор настроечек уровня
		cin >> choice;
		switch (choice)
		{
		case 1:
		{
			srand(time(NULL));
			cout << "[1] Уровень 1: Содержит 10 вопросов, у вас имеется 7 жизней\n";
			clear();
			int const size = 10;
			int arr[size];

			lifetime = 7;
			True_answer = 0;
			False_answer = 0;
			decision;
			check;

			for (int i = 0; i < size;) //цикл для рандома
			{
				check = false;
				int number = rand() % 50; // рандом из  50 вопросов

				for (int j = 0; j < i; j++) // проверочка на совпадение вопросов 
				{
					if (arr[j] == number)
					{
						check = true;
					}
				}

				if (check != true)
				{
					arr[i] = number;
					i++;
				}
			}
			for (int i = 0; i < size; i++)
			{

				if (arr[i] == 0)
				{
					cout << "[ - ] Как называется еврейский Новый год?" << endl;
					cout << "a)Ханука\t\tb)Йом Кипур\t\tc)Кванза\t\td)Рош ха-Шана\n" << endl;
					cout << "-->";
					cin >> answer;
					
					while (answer != 'd')
					{
						cout << " Вы выбрали неправильный вариант ответа :( Попробуйте еще раз: ";
						False_answer++;
						lifetime--;
						cin >> answer;
					}
					True_answer++;
				}
				else if (arr[i] == 1)
				{
					cout << "[ - ] Кто из этих персонажей не дружит с Гарри Поттером?" << endl;
					cout << "a)Рон Уизли\t\tb)Невилл Лонгботтом\t\tc)Драко Малфой\t\td)Гермиона Грейнджер\n" << endl;
					cout << "-->";
					cin >> answer;
					while (answer != 'c')
					{
						cout << " Вы выбрали неправильный вариант ответа :( Попробуйте еще раз: ";
						False_answer++;
						lifetime--;
						cin >> answer;
					}
					True_answer++;
				}
				else if (arr[i] == 2)
				{
					cout << "[ - ] Какое животное не фигурирует в китайском зодиаке?" << endl;
					cout << "a)Дракон\t\tb)Кролик\t\tc)Собака\t\td)Колибри\n" << endl;
					cout << "-->";
					cin >> answer;
					while (answer != 'd')
					{
						cout << " Вы выбрали неправильный вариант ответа :( Попробуйте еще раз: ";
						False_answer++;
						lifetime--;
						cin >> answer;
					}
					True_answer++;
				}
				else if (arr[i] == 3)
				{
					cout << "[ - ] В какой стране проходили летние Олимпийские игры 2016 года?" << endl;
					cout << "a)Китай\t\tb)Ирландия\t\tc)Бразилия\t\td)Италия\n" << endl;
					cout << "-->";
					cin >> answer;
					while (answer != 'c')
					{
						cout << " Вы выбрали неправильный вариант ответа :( Попробуйте еще раз: ";
						False_answer++;
						lifetime--;
						cin >> answer;
					}
					True_answer++;
				}
				else if (arr[i] == 4)
				{
					cout << "[ - ] Какая планета самая горячая?" << endl;
					cout << "a)Венера\t\tb)Сатурн\t\tc)Меркурий\t\td)Марс\n" << endl;
					cout << "-->";
					cin >> answer;
					while (answer != 'a')
					{
						cout << " Вы выбрали неправильный вариант ответа :( Попробуйте еще раз: ";
						False_answer++;
						lifetime--;
						cin >> answer;
					}
					True_answer++;
				}
				else if (arr[i] == 5)
				{
					cout << "[ - ] Как назывался корабль капитана Джека Воробья в Пиратах Карибского моря?" << endl;
					cout << "a)Мародер\t\tb)Черная жемчужина\t\tc)Черный питон\t\td)Слизерин\n" << endl;
					cout << "-->";
